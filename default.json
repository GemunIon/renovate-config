{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits", 
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@trejgun/"],
      "rollbackPrs": false
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "updateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "packagePatterns": [],
      "enabled": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    }
  ],
  "major": {
    "masterIssueApproval": true
  },
  "renovateFork": true,
  "dependencyDashboard": true
}
