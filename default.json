{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^umzug"],
      "allowedVersions": "3.0.0-beta.16"
    },
    {
      "matchPackagePatterns": ["^@nestjs/terminus"],
      "allowedVersions": "8.0.0-next.0"
    },
    {
      "matchPackagePatterns": ["^notistack"],
      "allowedVersions": "1.0.6"
    },
    {
      "matchPackagePatterns": ["^@trejgun/"],
      "rollbackPrs": false
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "updateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "addLabels": ["deps"]
    }
  ],
  "major": {
    "masterIssueApproval": true
  },
  "renovateFork": true,
  "dependencyDashboard": true
}
