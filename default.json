{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["umzug"],
      "allowedVersions": "<=3.0.0-beta.16"
    },
    {
      "matchPackageNames": ["@nestjs/terminus"],
      "allowedVersions": "<=8.0.0-next.0"
    },
    {
      "matchPackageNames": ["notistack"],
      "allowedVersions": "<=1.0.6"
    },
    {
      "matchPackagePatterns": ["^@gemunion/"],
      "rollbackPrs": false
    },
    {
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": false
    },
    {
      "updateTypes": [
        "major"
      ],
      "masterIssueApproval": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "addLabels": ["deps"]
    }
  ],
  "major": {
    "masterIssueApproval": true
  },
  "renovateFork": true,
  "dependencyDashboard": true
}
