{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "timezone": "Asia/Singapore",
  "schedule": [
    "before 5am on Saturday"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["umzug"],
      "allowedVersions": "<=3.0.0-beta.16"
    },
    {
      "matchPackageNames": ["husky"],
      "allowedVersions": "<=4.3.8"
    },
    {
      "matchPackageNames": ["@chainlink/contracts"],
      "allowedVersions": "<=0.2.3"
    },
    {
      "matchPackagePatterns": ["^@gemunion/"],
      "rollbackPrs": false
    },
    {
      "matchPackageNames": ["node"],
      "allowedVersions": "<=16"
    },
    {
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": false
    },
    {
      "updateTypes": [
        "major"
      ],
      "masterIssueApproval": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "addLabels": ["deps"]
    }
  ],
  "major": {
    "masterIssueApproval": true
  },
  "renovateFork": true,
  "dependencyDashboard": true
}